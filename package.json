{
  "name": "github-archiver",
  "version": "1.0.9",
  "description": "Archive GitHub repositories via CLI",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "github-archiver": "bin/github-archiver.js"
  },
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "build": "tsx scripts/build.ts",
    "dev": "tsx src/index.ts",
    "lint": "ultracite check",
    "format": "ultracite fix",
    "fix": "ultracite fix",
    "typecheck": "tsc --noEmit",
    "tsc": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "changeset": "changeset",
    "changeset:add": "changeset add",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "release": "changeset publish",
    "prepublishOnly": "npm run build && npm run typecheck && npm run lint"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "octokit": "^5.0.5",
    "p-queue": "^9.1.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@changesets/get-github-info": "^0.7.0",
    "@types/node": "^25.0.6",
    "esbuild": "^0.27.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "ultracite": "^7.0.11",
    "vitest": "^4.0.16"
  },
  "keywords": [
    "github",
    "archive",
    "cli",
    "batch",
    "typescript"
  ],
  "author": "mynameistito",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mynameistito/github-archiver.git"
  }
}
