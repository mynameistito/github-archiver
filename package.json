{
  "name": "github-archiver",
  "version": "1.5.1",
  "description": "Archive GitHub repositories via CLI",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "github-archiver": "bin/github-archiver.js"
  },
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "build": "bun scripts/build.ts",
    "dev": "bun src/index.ts",
    "lint": "bunx ultracite check",
    "format": "bunx ultracite fix",
    "fix": "bunx ultracite fix",
    "typecheck": "bunx tsc --noEmit",
    "tsc": "bunx tsc --noEmit",
    "test": "bun test --run ./tests",
    "test:coverage": "bun test --coverage ./tests",
    "changeset": "bunx changeset",
    "changeset:add": "bunx changeset add",
    "changeset:version": "bunx changeset version",
    "changeset:publish": "bunx changeset publish",
    "release": "bunx changeset publish",
    "prepublishOnly": "bun run build && bun run typecheck && bun run lint"
  },
  "dependencies": {
    "commander": "^14.0.3",
    "octokit": "^5.0.5",
    "p-queue": "^9.1.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.3",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@changesets/get-github-info": "^0.7.0",
    "@types/bun": "^1.3.9",
    "esbuild": "^0.27.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "ultracite": "^7.2.3"
  },
  "keywords": [
    "github",
    "archive",
    "cli",
    "batch",
    "typescript"
  ],
  "author": "mynameistito",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mynameistito/github-archiver.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
